<Window x:Class="UI_WPF.ManageCatsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI_WPF"
        mc:Ignorable="d"
        Title="Gestione Gatti" Height="500" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Elenco Gatti" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

        <ListBox Grid.Row="1" x:Name="lstCats" Margin="0,0,0,15"
                 SelectionChanged="LstCats_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="5">
                        <TextBlock FontWeight="Bold">
                            <Run Text="{Binding Name}"/>
                            <Run Text=" - "/>
                            <Run Text="{Binding Breed}"/>
                        </TextBlock>
                        <TextBlock>
                            <Run Text="Sesso: "/>
                        </TextBlock>
                        <TextBlock>
                            <Run Text="Data di arrivo: "/>
                            <Run Text="{Binding ArrivalDate, StringFormat=dd/MM/yyyy}"/>
                        </TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnAggiungi" Content="Aggiungi" Width="80" Height="30" 
                    Margin="0,0,10,0" Click="BtnAggiungi_Click"/>
            <Button x:Name="btnModifica" Content="Modifica" Width="80" Height="30" 
                    Margin="0,0,10,0" Click="BtnModifica_Click" IsEnabled="False"/>
            <Button x:Name="btnElimina" Content="Elimina" Width="80" Height="30" 
                    Margin="0,0,10,0" Click="BtnElimina_Click" IsEnabled="False"/>
            <Button x:Name="btnAggiorna" Content="Aggiorna" Width="80" Height="30" 
                    Click="BtnAggiorna_Click"/>
        </StackPanel>
    </Grid>
</Window>