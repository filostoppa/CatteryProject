<Window x:Class="UI_WPF.AdoptionWindows.AddAdoptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI_WPF.AdoptionWindows"
        mc:Ignorable="d"
        Title="Aggiungi Adozione" Height="400" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Gatto -->
        <TextBlock Grid.Row="0" Text="Gatto:" Margin="0,0,0,5"/>
        <ComboBox Grid.Row="1" x:Name="cmbCat" Margin="0,0,0,5"
                  DisplayMemberPath="Name" SelectionChanged="CmbCat_SelectionChanged"/>
        <TextBlock Grid.Row="2" x:Name="txtCatInfo" Foreground="Gray" 
                   FontSize="11" Margin="0,0,0,15"/>

        <!-- Adottante -->
        <TextBlock Grid.Row="3" Text="Adottante:" Margin="0,0,0,5"/>
        <ComboBox Grid.Row="4" x:Name="cmbAdopter" Margin="0,0,0,15">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock>
                            <Run Text="{Binding FirstName}"/>
                            <Run Text=" "/>
                            <Run Text="{Binding LastName}"/>
                        </TextBlock>
                        <TextBlock FontSize="11" Foreground="Gray" Text="{Binding Email}"/>
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <!-- Data Adozione -->
        <TextBlock Grid.Row="5" Text="Data di adozione:" Margin="0,0,0,5"/>
        <DatePicker Grid.Row="6" x:Name="dpAdoptionDate" Margin="0,0,0,15"/>

        <!-- Info -->
        <TextBlock Grid.Row="7" TextWrapping="Wrap" Foreground="DarkBlue" Margin="0,0,0,15">
            <Run Text="Nota: La data di adozione deve essere successiva alla data di arrivo del gatto."/>
        </TextBlock>

        <!-- Pulsanti -->
        <StackPanel Grid.Row="10" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnSalva" Content="Salva" Width="80" Height="30"
                    Margin="0,0,10,0" Click="BtnSalva_Click"/>
            <Button x:Name="btnAnnulla" Content="Annulla" Width="80" Height="30"
                    Click="BtnAnnulla_Click"/>
        </StackPanel>
    </Grid>
</Window>