<Window x:Class="UI_WPF.ManageAdoptersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI_WPF"
        mc:Ignorable="d"
        Title="Gestione Adottanti" Height="550" Width="750"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Titolo -->
        <TextBlock Grid.Row="0" 
                   Text="Elenco Adottanti" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Margin="0,0,0,15"/>

        <!-- Lista Adottanti -->
        <ListBox Grid.Row="1" 
                 x:Name="lstAdopters" 
                 Margin="0,0,0,15"
                 SelectionChanged="LstAdopters_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="8,5">
                        <!-- Nome + Cognome -->
                        <TextBlock FontWeight="Bold" FontSize="14">
                            <Run Text="{Binding FirstName}"/>
                            <Run Text=" "/>
                            <Run Text="{Binding LastName}"/>
                        </TextBlock>

                        <!-- Email -->
                        <TextBlock Foreground="#555" FontSize="12">
                            <Run Text="Email: "/>
                            <Run Text="{Binding Email}"/>
                        </TextBlock>

                        <!-- Telefono -->
                        <TextBlock Foreground="#555" FontSize="12" >
                            <Run Text="Telefono: "/>
                            <Run Text="{Binding Phones}"/>
                        </TextBlock>

                        <!-- Città + CAP -->
                        <TextBlock Foreground="#555" FontSize="12">
                            <Run Text="{Binding City}"/>
                            <Run Text=", "/>
                            <Run Text="{Binding CityCap}"/>
                        </TextBlock>

                        <!-- Codice Fiscale (se presente) -->
                        <TextBlock Foreground="#777" FontStyle="Italic" FontSize="11">
                            <Run Text="CF: "/>
                            <Run Text="{Binding FiscalCode}"/>
                        </TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Pulsanti -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button x:Name="btnAggiungi" 
                    Content="Aggiungi" 
                    Width="90" Height="35"
                    Margin="0,0,10,0" 
                    Click="BtnAggiungi_Click"
                    Visibility="Collapsed"/>

            <Button x:Name="btnModifica" 
                    Content="Modifica" 
                    Width="90" Height="35"
                    Margin="0,0,10,0" 
                    Click="BtnModifica_Click" 
                    IsEnabled="False"
                    Visibility="Collapsed"/>

            <Button x:Name="btnElimina" 
                    Content="Elimina" 
                    Width="90" Height="35"
                    Margin="0,0,10,0" 
                    Click="BtnElimina_Click" 
                    IsEnabled="False"/>

            <Button x:Name="btnAggiorna" 
                    Content="Aggiorna" 
                    Width="90" Height="35"
                    Click="BtnAggiorna_Click"/>
        </StackPanel>
    </Grid>
</Window>