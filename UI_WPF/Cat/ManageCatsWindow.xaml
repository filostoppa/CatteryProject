<Window x:Class="UI_WPF.ManageCatsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Cats" Height="400" Width="500">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- ListBox per i gatti -->
        <ListBox x:Name="lstCats" Grid.Row="0" Margin="0,0,0,10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}" FontWeight="Bold" Margin="0,0,10,0"/>
                        <TextBlock Text="{Binding Breed}" Foreground="Gray"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Bottoni -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="btnAdd"     Content="Aggiungi Gatto"    Width="90" Margin="5" Click="BtnAdd_Click"/>
            <Button x:Name="btnEdit"    Content="Modifica"       Width="90" Margin="5" IsEnabled="False" Visibility="Collapsed"/>
            <Button x:Name="btnDelete"  Content="Togli Gatto"     Width="90" Margin="5" Click="BtnDelete_Click" IsEnabled="False"/>
            <Button x:Name="btnRefresh" Content="Aggiorna"    Width="90" Margin="5" Click="BtnRefresh_Click"/>
        </StackPanel>
    </Grid>
</Window>